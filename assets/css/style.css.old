body {
  font-family: "Open Sans";
  color:#1E1F2F;
  background-image: url(../images/geo_bg.png);
  background-attachment: fixed;
}

#enhanced-header-table {
  display: none;
}

#mobile-header, #mobile-description {
  display: table;
  /* background: red; */
}

#header-container {
  position: absolute;
  width: 100%;
  height: 95vh;
  padding: 0;
  top:0;
  left:0;
  z-index: 1;
}

#header-img {
  height: 35em;
  /* padding-left: 5em; */
}

#mobile-header {
  width: 40em;
  margin: auto;
  background-color: #C9981D;
  border-bottom-left-radius: 1em;
  border-bottom-right-radius: 1em;
  box-shadow: 0em 0em 0.5em rgba(0,0,0,0.5);
  /* padding: 2em; */
}

.emph {
  font-size: 5em;
  font-family: "Merriweather";
  font-weight: bolder;
  color: white;
  line-height: 1em;
}

.dot {
  color:#1E1F2F;
}

.div-dot {
  color:#1E1F2F;
  font-size: 5em;
  font-family: "Merriweather";

}

.content-container {
  width: 36em;
  position: relative;
  margin: auto;
  margin-top: -2em;
  padding-left: 2em;
  padding-right: 2em;
  height: auto;
  /* border-bottom-right-radius: 1em;
  border-bottom-left-radius: 1em; */
  /* box-shadow: 0em 0em 0.5em rgba(0,0,0,0.5); */
  background-color: rgba(255, 255, 255, 1);
  /* z-index: 0; */
}

#dummy {
  height: 6em;
  z-index: -101;
}

#mobile-description, #main {
  font-size: 2em;
  width: 18em;
  padding-left: 1em;
  padding-right: 1em;
}

#main {
  padding-bottom: 10em;
}

.header-text {
  padding-top: 2em;
  text-align: center;
  margin: auto;
  padding-bottom: 0.2em;
  font-family: Merriweather;
  border-bottom: 0.1em solid #C9981D;
  display: table;
  font-size: 3em;
  color: #1E1F2F;
}

#nav-container {
  /* position: absolute;
  top: 0em;
  left: 40em; */
  width: 10em;
  z-index: 100;
  margin-top: -10em;
  margin-left: -2em;
  position: relative;
  display: block;
}

#nav-table td {
  padding: 2em;
  padding-bottom: 3.5em;
}

#button-container {
  /* color: #1E1F2F; */
  position: relative;
  color: red;
  text-decoration: none;
  font-family: "Open Sans";
  /* font-family: Merriweather; */
  font-weight: bold;
  letter-spacing: 0.1em;
  transition: 0.25s;
  -webkit-transition: 0.25s;
}

#button-container a:hover {
  border-bottom: 0.15em solid #1E1F2F;
}

.skill-img {
  height: 5em;
  padding: 1em;
  transition: all 1s;
  -webkit-transition: all 1s;
}

.skill-img:hover {
  height: 6em;
}

#projects-table {
  margin: auto;
}

#projects-table td {
  padding: 0.1em;
}

.project-img {
  /* border-radius: 100%; */
  /* background: red; */
  height: 20em;
  width: 20em;
}

.project-img-overlay {
  margin-top:-5em;
  height: 3.3em;
  width: 5em;
  /* background: rgba(255, 255, 255, 0.15); */
  text-align: center;
  font-size: 4em;
  /* border: 1px solid black; */
  font-family: "Open Sans";
  padding-top: 1.7em;
  color: rgba(255,255,255,0);
  transition: 0.25s;
  -webkit-transition: 0.25s;
  font-weight: bold;
}

.project-img-overlay:hover {
  color: #1E1F2F;
  background: rgba(255, 255, 255, 0.75);
}

#asae {
  background-image: url(../images/asae.jpg);
  background-size: cover;
}
#steve {
  background-image: url(../images/steve.jpg);
  background-size: cover;
}
#audibears {
  background-image: url(../images/audibears.png);
  background-size: cover;
}
#ichiban {
  background-image: url(../images/ichiban.png);
  background-size: cover;
}
#orthoslap {
  background-image: url(../images/orthoslap.png);
  background-size: cover;
}

#research-table {
  width:80%;
  margin: auto;
  font-size: "Open Sans";
}

#research-table td {
  padding: 1em;
}

#research-table a {
  color: #C9981D;
  text-decoration: none;
  font-weight: bold;
  transition: 0.25s;
  -webkit-transition: 0.25s;
}

#research-table a:hover {
  /* color: #6C4860; */
  font-size: 1.05em;
}

.research-img {
  height: 10em;
  width: 10em;
  /* border-radius: 100%; */
}
#ddsl {
  background-image: url(../images/ddsl.png);
  background-size: contain;
}
#apsdfd2018 {
  background-image: url(../images/ddsl_airfoil.gif);
  background-size: cover;
}

a {
  text-decoration: none;
}
